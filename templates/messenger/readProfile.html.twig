{% extends 'base.html.twig' %}

{% block title %}Messages de Profil{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>Messages re√ßus</h2>
        <ul class="list-group">
            {% for messageProfile in messagesProfile %}
                <li class="list-group-item">
                    <strong>{{ messageProfile.title }}:</strong> {{ messageProfile.content }}
                    <span class="text-muted float-end">{{ messageProfile.createdAt | date('d/m/Y H:i') }}</span>
                </li>
            {% else %}
                <li class="list-group-item">Aucun message pour le moment.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
