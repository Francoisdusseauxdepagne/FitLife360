{% extends 'base.html.twig' %}

{% block title %}FitLife360-Profil{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row gx-5">
			<div class="col-lg-4">
				<div class="card mb-4 shadow-sm">
					<div class="card-header bg-primary text-white">
						<h1 class="fs-4 mb-0 display-5">Ravie de vous voir {{ profile.firstName }}</h1>
					</div>
					<div class="card-body bg-light">
						<div class="text-center">
							<img src="{{ asset('images/photos/' ~ profile.photo) }}" class="card-img-top rounded-circle shadow-lg" alt="Profile">
						</div>
						<div class="mt-4">
							<h2 class="text-primary fs-3 mb-3 ">Informations personnelles :</h2>
							<ul class="lists p-0">
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Prénom :</strong>
									{{ profile.firstName }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Nom :</strong>
									{{ profile.name }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Date de naissance :</strong>
									{{ profile.dateDeNaissance | date('d/m/Y') }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Email :</strong>
									{{ app.user.email }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Profil créé le :</strong>
									{{ profile.createdAt | date('d/m/Y') }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Profil modifié le :</strong>
									{{ profile.updatedAt | date('d/m/Y') }}</p></li>
							</ul>
						</div>
						<div class="mt-4">
							<h2 class="text-primary fs-3 mb-3">Objectifs :</h2>
							<ul class="lists p-0">
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Objectif sportif :</strong>
									{{ profile.objectifSportif }}</p></li>
								<li class="lists_profile">
									<p class="lists_profile--poppins"><strong>Biographie :</strong>
									{{ profile.bio }}</p></li>
							</ul>
							<a href="{{ path('app_update_profile') }}" class="btn mt-3 btn-outline-warning">Modifier mon profil</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				{% if profile.idAbonnement == "Vip" %}
					<div class="card mb-4">
						<div class="card-header bg-secondary">
							<h2 class="fs-5 mb-0 display-6 text-white">Événements disponibles</h2>
						</div>
						<div class="card-body bg-light">
							{% if events is not empty %}
								<div class="row g-4">
									{% for event in events %}
										<div class="col-lg-6 col-md-12 col-sm-12">
											<div class="card">
												<div class="card-body">
													<h2 class="card-title">{{ event.eventType }}</h2>
													<p class="card-text">{{ event.description }}</p>
													<ul class="list-unstyled">
														<li>Date :
															{{ event.date|date('d/m/Y') }}</li>
														<li>Heure :
															{{ event.startTime|date('H:i') }} à {{ event.endTime|date('H:i') }}</li>
														<li>Places disponibles :
															{{ event.spaceAvailable }}</li>
													</ul>
													<a href="{{ path('app_contact_event', {'id': event.id}) }}" class="btn btn-warning">Je veux participer</a>
													<small><p class="fst-italic mt-3">Veuillez envoyer qu'une demande par événement</p></small>
												</div>
											</div>
										</div>
									{% endfor %}
								</div>
							{% else %}
								<p class="text-muted textProfile">Aucun événement prévu pour le moment.</p>
							{% endif %}
						</div>
					</div>
				{% endif %}
				{% if not profile.idAbonnement %}
					<div class="card mb-4">
						<div class="card-header bg-danger text-white">
							<h2 class="fs-5 mb-0">Choisir un abonnement</h2>
						</div>
						<div class="card-body">
							<p class="fs-6 textProfile">Vous n'avez pas encore choisi d'abonnement.</p>
							<small>
								<p class="fst-italic textProfile">Pour profiter des services de FitLife360 vous devez souscrire à un abonnement.</p>
								<small>
									<a href="{{ path('abonnement_list') }}" class="btn btn-primary">Voir les abonnements</a>
								</div>
							</div>
						{% else %}
							<div class="card mb-4">
								<div class="card-header bg-secondary text-white">
									<h2 class="fs-5 mb-0 display-6">Mon abonnement
										{{ profile.idAbonnement.title }}</h2>
								</div>
								<div class="card-body bg-light">
									<div class="row g-4">
										<div class="col-lg-6 col-md-12 col-sm-12">
											<ul class="p-0">
												{% set abonnement_details = profile.idAbonnement.description|split(", ") %}
												{% for detail in abonnement_details %}
												<li class="d-flex align-items-center fs-6 textProfile fs-5 my-3">
													<span class="mx-2"><i class="fa-regular fa-circle-check text-primary fs-5"></i></span>
													{{ detail|replace({'. ': ''}) }}
												</li>
												{% endfor %}
											</ul>
										</div>
										<div class="col textProfile">
											<p class="card-text fs-6">
												<strong>Montant payé:</strong>
												{{ profile.idAbonnement.prix }}€
											</p>
											<p class"card-text fs-6">
												<strong>Durée contratuelle:</strong>
												{{ profile.idAbonnement.duree }}
											</p>
											{% if profile.idAbonnement.title == "Vip" or profile.idAbonnement.title == "Premium" %}
												<a href="{{ path('app_resiliation')}}" class="btn btn-outline-warning btn-sm my-2">Supprimer mon abonnement</a>
												<a href="{{ path('abonnement_list') }}" class="btn btn-outline-warning btn-sm">Voir les abonnements</a>
											{% elseif profile.idAbonnement.title == "Basic" %}
												<p>Pas d'abonnement</p>
												<a href="{{ path('app_delete')}}" class="btn btn-outline-danger btn-sm">Supprimer</a>
												<a href="{{ path('abonnement_list') }}" class="btn btn-outline-warning btn-sm">Voir les abonnements</a>
											{% endif %}
										</div>
									</div>
								</div>
							</div>
							<div class="card mb-4">
								<div class="card-header bg-secondary text-white">
									<h2 class="fs-5 mb-0 display-6">Mes accès</h2>
								</div>
								<div class="card-body bg-light">
									<div class="row g-4">
										{% if profile.idAbonnement.title == "Vip" %}
											<div class="col-lg-6 col-md-12 col-sm-12">
												<a href="{{ path('app_tuto_video') }}" class="btn btn-outline-primary btn-sm mb-2 textProfile">Accès aux vidéos</a>
											</div>
											<div class="col-lg-6 col-md-12 col-sm-12">
												<a href="{{ path('app_plan_entrainement') }}" class="btn btn-outline-primary  btn-sm mb-2 textProfile">Accès à mon programme d'entraînement</a>
											</div>
										{% elseif profile.idAbonnement.title == "Premium" %}
											<div class="col-lg-6 col-md-12 col-sm-12">
												<a href="{{ path('app_plan_entrainement') }}" class="btn btn-warning btn-sm mb-2">Accès à mon programme d'entraînement</a>
												<a href="{{ path('app_tuto_video') }}" class="btn btn-warning btn-sm mb-2 textProfile">Accès aux vidéos</a>
											</div>
										{% elseif profile.idAbonnement.title == "Basic" %}
											<div class="col-lg-6 col-md-12 col-sm-12">
												<a href="{{ path('app_plan_entrainement') }}" class="btn btn-warning btn-sm mb-2 textProfile">Accès à mon programme d'entraînement</a>
											</div>
										{% endif %}
									</div>
								</div>
							</div>
						{% endif %}
						<div class="card mb-4">
							<div class="card-header bg-secondary text-white">
								<h2 class="fs-5 mb-0 display-6">Mon coach personnel</h2>
							</div>
							<div class="card-body bg-light">
								{% if profile.idProfileCoach %}
									<div class="d-flex align-items-center">
										<img class="w-25 me-3" src="{{ asset('/images/photos/' ~ profile.idProfileCoach.photo) }}" alt="Photo de profil de {{ profile.idProfileCoach.firstName }} {{ profile.idProfileCoach.name }}">
										<div>
											<p class="fs-6 mb-0">Votre coach :
												{{ profile.idProfileCoach.firstName }}
												{{ profile.idProfileCoach.name }}</p>
											{% if profile.idAbonnement and (profile.idAbonnement.title == "Vip" or profile.idAbonnement.title == "Premium") %}
												<a href="{{ path('app_reservation') }}" class="btn btn-warning mt-2">Réserver un rendez-vous bilan avec un coach</a>
											{% endif %}
										</div>
									</div>
								{% else %}
									<p class="fs-6 textProfile">Aucun coach assigné.</p>
								{% endif %}
								{% if profile.idAbonnement == "Vip" or profile.idAbonnement == "Premium" %}
									{% if reservation %}
										<div class="card mt-3">
											<div class="card-body">
												<h3 class="card-title fs-5 mb-3">Mon rendez-vous</h3>
												<ul class="list-group list-group-flush">
													<li class="list-group-item">Date :
														{{ reservation.date | date('d/m/Y') }}</li>
													<li class="list-group-item">Heure :
														{{ reservation.startTime | date('H:i') }}</li>
												</ul>
												<a href="{{ path('app_reservation_update', {'id': reservation.id}) }}" class="btn btn-warning mt-3">Modifier mon rendez-vous</a>
												<a href="{{ path('app_reservation_delete', {'id': reservation.id}) }}" class="btn btn-danger mt-3">Supprimer mon rendez-vous</a>
											</div>
										</div>
									{% else %}
										<div class="alert alert-light mt-3 textProfile w-75" role="alert">
											Pas de rendez-vous programmé pour le moment.
										</div>
									{% endif %}
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		{% endblock %}
