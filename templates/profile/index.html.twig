{% extends 'base.html.twig' %}

{% block title %}FitLife360-Profil{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5 justify-content-start">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light text-white">
                    <h1 class="fs-4 mb-0 text-success">Bonjour {{ profile.firstName }} {{ profile.name }} üí™</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <img src="{{ asset('images/photos/' ~ profile.photo) }}" class="card-img-top" alt="Profile">
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-lg-12">
                            <h2 class="text-primary">Informations personnelles :</h2>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Pr√©nom :</strong> {{ profile.firstName }}</li>
                                <li class="list-group-item"><strong>Nom :</strong> {{ profile.name }}</li>
                                <li class="list-group-item"><strong>Age :</strong> {{ profile.age }} ans</li>
                                <li class="list-group-item"><strong>Email :</strong> {{ app.user.email }}</li>
                                <li class="list-group-item"><strong>Profil cr√©√© le :</strong> {{ profile.createdAt | date('d/m/Y') }}</li>
                            </ul>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12">
                            <h2 class="text-primary">Objectifs :</h2>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Objectif sportif :</strong> {{ profile.objectifSportif }}</li>
                                <li class="list-group-item"><strong>Biographie :</strong> {{ profile.bio }}</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            {% if profile.idAbonnement %}
            <div class="card mb-4">
                <div class="card-header bg-light text-dark">
                    <h2 class="fs-4 mb-0">Mon abonnement {{ profile.idAbonnement.title }}</h2>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        {% set abonnement_details = profile.idAbonnement.description|split(", ") %}
                        {% for detail in abonnement_details %}
                        <div class="d-flex align-items-center flex-row">
                            <span class="mx-2">
                                <i class="fa-regular fa-square-check"></i>
                            </span>
                            <li class="mb-2 fs-6 fst-italic">{{ detail|replace({'. ': ''}) }}</li>
                        </div>
                        {% endfor %}
                    </ul>
                    <p class="card-text mt-4 fs-5">
                        <strong>Prix de l'abonnement est de: {{ profile.idAbonnement.prix }}‚Ç¨ / an</strong>
                    </p>
                    <a href="{{ path('app_abonnement') }}" class="btn btn-primary">Voir les abonnements</a>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header bg-light text-dark">
                    <h2 class="fs-4 mb-0">Mes acc√®s {{ profile.idAbonnement.title }}</h2>
                </div>
                <div class="card-body">
                    {% if profile.idAbonnement.title == "Vip" %}
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('app_tuto_video') }}" class="btn btn-success btn-sm mb-2">Acc√®s aux vid√©os</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('app_plan_entrainement') }}" class="btn btn-success btn-sm mb-2">Acc√®s √† mon programme d'entra√Ænement</a>
                        </div>
                    </div>
                    {% elseif profile.idAbonnement.title == "Basic" or profile.idAbonnement.title == "Premium" %}
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('app_plan_entrainement') }}" class="btn btn-warning btn-sm mb-2">Acc√®s √† mon programme d'entra√Ænement</a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% else %}
            <div class="card mt-3">
                <div class="card-header bg-light text-dark">
                    <h2 class="fs-4 mb-0">Choisir un abonnement</h2>
                </div>
                <div class="card-body">
                    <p>Vous n'avez pas encore choisi d'abonnement.</p>
                    <a href="{{ path('app_abonnement') }}" class="btn btn-primary">Voir les abonnements</a>
                </div>
            </div>
            {% endif %}
            <div class="card mt-3">
                <div class="card-header bg-light text-dark">
                    <h2 class="fs-4 mb-2">Mon coach personnel</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    {% if profile.idProfileCoach %}
                        <img class="w-25 mb-3" src="{{ asset('/images/photos/' ~ profile.idProfileCoach.photo) }}" alt="Photo de profil de {{ profile.idProfileCoach.firstName }} {{ profile.idProfileCoach.name }}" class="img-fluid">
                        {% if profile.idAbonnement and (profile.idAbonnement.title == "Vip" or profile.idAbonnement.title == "Premium") %}
                        <a href="{{ path('app_reservation') }}" class="btn btn-warning w-50">Reserver un cr√©neau avec un coach</a>
                        {% endif %}
                        {% else %}
                        <p>Aucun coach assign√©.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
