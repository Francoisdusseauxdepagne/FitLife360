{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-sm">
                <div class="card-header bgBlue text-white">
                    <h1>Modifier mon profil</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.firstName, {'label': 'Pr√©nom', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.name, {'label': 'Nom', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.dateDeNaissance, {'label': 'Date de Naissance', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.photoFile, {'label': 'Photo', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.sexe, {'label': 'Sexe', 'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.objectifSportif, {'label': 'Objectif Sportif', 'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.bio, {'label': 'Biographie', 'attr': {'class': 'form-control', 'rows': 3}}) }}
                    </div>
                    <div class="d-flex justify-content-between profileUpdate">
                        <button type="submit" class="profileUpdate_btn btn btn-md text-white">Enregistrer</button>
                        <a href="{{ path('app_profile') }}" class="btn btn-outline-danger">Annuler</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
