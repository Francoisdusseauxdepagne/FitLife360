{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }}
    <meta name="description" content="FitLife360 est votre partenaire pour une vie plus saine et active. Découvrez nos programmes d'entraînement personnalisés, suivez votre progression, recevez des conseils nutritionnels et accédez à une bibliothèque de vidéos d'entraînement. Inscrivez-vous dès maintenant pour commencer votre parcours vers une meilleure forme physique et un bien-être optimal.">
{% endblock %}

{% block title %}FitLife360 - Accueil{% endblock %}

{% block body %}
<div class="container-fluid p-0">
    <header class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold">Bienvenue sur FitLife360</h1>
                    <p class="lead mb-0">Votre partenaire pour une vie plus saine et plus active</p>
                </div>
            </div>
        </div>
    </header>
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-12 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('images/imgHomeEntrainement.jpeg') }}" class="card-img-top" alt="Entraînement personnalisé">
                        <div class="card-body">
                            <h2 class="card-title">Entraînement personnalisé</h2>
                            <p class="card-text">Obtenez un programme d'entraînement personnalisé adapté à vos objectifs et votre niveau.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('images/imgHomeSuivi.jpeg') }}" class="card-img-top" alt="Suivi de votre progression">
                        <div class="card-body">
                            <h2 class="card-title">Suivi de votre progression</h2>
                            <p class="card-text">Suivez vos progrès et analysez vos performances pour atteindre vos objectifs plus rapidement.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 mb-4">
                    <div class="card h-100">
                        <img src="{{ asset('images/imgHomeNutrition.jpeg') }}" class="card-img-top" alt="Nutrition équilibrée">
                        <div class="card-body">
                            <h2 class="card-title">Nutrition équilibrée</h2>
                            <p class="card-text">Des conseils nutritionnels personnalisés pour vous aider à adopter une alimentation saine et équilibrée.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5 bg-secondary text-white">
    <div class="container">
        <h2 class="display-4 fw-bold text-center">Événements</h2>
        <p class="lead text-center mb-5 fst-italic">Participez à nos événements en ligne pour rester actif et en bonne santé depuis chez vous.</p>
        {% if events is not empty %}
            <div class="row row-cols-1 row-cols-lg-2 g-4">
                {% for event in events %}
                    <div class="col mb-4">
                        <div class="card bg-light text-dark h-100">
                            {% if event.photo %}
                                <img src="{{ asset('images/photos/' ~ event.photo) }}" class="card-img-top" alt="Photo de l'événement">
                            {% endif %}
                            <div class="card-body">
                                <h2 class="card-title text-success">{{ event.eventType }}</h2>
                                <p class="card-text fst-italic">{{ event.description }}</p>
                                <p class="card-text"><strong>Date :</strong> {{ event.date|date('d/m/Y') }}</p>
                                <p class="card-text"><strong>Heure :</strong> De {{ event.startTime|date('H:i') }} à {{ event.endTime|date('H:i') }}</p>
                            </div>
                            <div class="card-footer">
                                <small><p class="card-text fst-italic text-center mb-1">Événement disponible avec la formule "VIP"</p></small>
                                <a href="{{ path('abonnement_list') }}" class="btn btn-success btn-sm d-block mx-auto w-50 my-2">Voir les abonnements</a>
                                <a href="{{ path('app_login')}}"><p class="card-text text-center mb-1">Inscrivez-vous maintenant !</p></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-light text-center w-50 mx-auto" role="alert">
                Aucun événement prévu pour le moment.
            </div>
        {% endif %}
    </div>
</section>
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="display-4 fw-bold">À propos</h2>
                    <p class="lead">Découvrez qui nous sommes et notre mission.</p>
                    <a href="{{ path('app_apropos') }}" class="btn btn-primary btn-lg">En savoir plus</a>
                </div>
            </div>
        </div>
    </section>
    <section class="bg-light py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="display-4 fw-bold">Abonnements</h2>
                    <p class="lead">Découvrez nos différents abonnements et choisissez celui qui vous convient le mieux.</p>
                    <a href="{{ path('abonnement_list') }}" class="btn btn-primary btn-lg">Voir les abonnements</a>
                </div>
            </div>
        </div>
    </section>
    <section class="py-5 bg-dark text-white text-center">
        <div class="container">
            <h2 class="display-4 fw-bold">Vidéos d'entraînement</h2>
            <p class="lead">Accédez à notre bibliothèque de vidéos d'entraînement pour vous aider à atteindre vos objectifs.</p>
            {% if app.user and app.user.profile %}
                {% if app.user.profile.idAbonnement %}
                    {% if app.user.profile.idAbonnement.title == "Vip" %}
                        <a href="{{ path('app_tuto_video') }}" class="btn btn-success btn-lg">Voir les vidéos</a>
                    {% elseif app.user.profile.idAbonnement.title == "Premium" %}
                        <a href="{{ path('app_tuto_video') }}" class="btn btn-warning btn-lg">Voir les vidéos</a>
                    {% endif %}
                {% endif %}
            {% else %}
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">S'inscrire</a>
            {% endif %}
        </div>
    </section>  
</div>
{% endblock %}