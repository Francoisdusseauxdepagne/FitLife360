{% extends 'base.html.twig' %}

{% block title %}Demande de réservation{% endblock %}

{% block meta_description %}Bienvenue sur l'espace reservation de FitLife360.{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title mb-4">Demander une réservation</h1>
                    <p class="card-text">Les premiers messages envoyés seront pris en compte.</p>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre message'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}