{% extends 'base.html.twig' %}

{% block title %}FitLife360 - Contact{% endblock %}

{% block body %}
<div class="container p-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Contactez-nous</h2>
                    {{ form_start(contactForm, {'attr': {'class': 'row g-3'}}) }}
                    <div class="mb-3">
                        {{ form_label(contactForm.objet, 'Objet', {'class': 'form-label'}) }}
                        {{ form_widget(contactForm.objet, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre objet'}}) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(contactForm.text, 'Message', {'class': 'form-label'}) }}
                        {{ form_widget(contactForm.text, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Entrez votre message'}}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                    </div>
                    {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
