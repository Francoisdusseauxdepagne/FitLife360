{% extends 'base.html.twig' %}

{% block title %}FitLife360 - Abonnements{% endblock %}

{% block body %}
<div class="container-fluid py-5 bg-dark mt-5">
    <div class="container">
        <h1 class="text-center display-4 mb-5 text-white">Découvrez nos Abonnements</h1>
        <div class="row">
            {% for abonnement in abonnements %}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card shadow-lg border-2 w-100">
                        <div class="card-header text-center text-white bg-success">
                            <h2 class="card-title my-2">{{ abonnement.title }}</h2>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="mb-4 text-center">
                                <span class="display-6 fw-bold">{{ abonnement.prix }}€ / an</span>
                            </div>
                            <ul class="list-group list-unstyled mb-4">
                                {% set abonnement_details = abonnement.description|split(", ") %}
                                {% for detail in abonnement_details %}
                                    <div class="d-flex flex-row my-2">
                                        <span class="mx-2"><i class="fa-regular fa-circle-check text-success fs-5"></i></span>
                                        <li>{{ detail }}</li>
                                    </div>
                                {% endfor %}
                            </ul>
                            <div class="mt-auto">
                                {% if not app.user %}
                                    <a href="{{ path('app_register') }}" class="btn btn-secondary btn-block">Inscrivez-vous</a>
                                {% elseif app.user and app.user.profile is null %}
                                    <a href="{{ path('app_edit_profile') }}" class="btn btn-secondary btn-block">Complétez votre profil</a>
                                {% elseif app.user.profile.idAbonnement is null %}
                                    <a href="{{ path('app_panier', {'id': abonnement.id}) }}" class="btn btn-secondary btn-block">Je choisis</a>
                                {% else %}
                                    <a href="{{ path('app_panier', {'id': abonnement.id}) }}" class="btn btn-secondary btn-block">Je choisis</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
