{% extends 'base.html.twig' %}

{% block title %}FitLife360 - S'inscrire{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="card p-5">
                <h1 class="text-center mb-4">S'inscrire</h1>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger text-center" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}
                    <div class="form-group">
                        {{ form_label(registrationForm.email, 'Email') }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.name, 'Nom') }}
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.name) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.firstName, 'Pr√©nom') }}
                        {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.firstName) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.dob, 'Date de naissance') }}
                        {{ form_widget(registrationForm.dob, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(registrationForm.dob) }}
                    </div>

                    <div class="form-group form-check mt-4">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        {{ form_label(registrationForm.agreeTerms, 'Accepter les termes', {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>

                    <button type="submit" class="btn btn-lg btn-primary mt-4">
                        S'inscrire
                    </button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
