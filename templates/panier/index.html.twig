{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="display-4">Votre Panier</h1>
        {% if panier is empty %}
            <div class="alert alert-info" role="alert">
                Votre panier est vide.
            </div>
        {% else %}
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">{{ panier.idAbonnement.title }}</h5>
                    <p class="card-text">{{ panier.idAbonnement.description }}</p>
                    <p class="card-text"><strong>Prix :</strong> {{ panier.idAbonnement.prix }}â‚¬/an</p>
                    <form action="{{ path('profile_update') }}" method="post">
                        <input type="hidden" name="abonnement_id" value="{{ panier.idAbonnement.id }}">
                        <button type="submit" class="btn btn-primary">Je valide</button>
                    </form>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
