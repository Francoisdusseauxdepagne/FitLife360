{% extends 'base.html.twig' %}

{% block title %}FitLife360 - Événements{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-5 display-4">Événements à Distance</h1>
        {% if events is not empty %}
            <div class="row g-4">
                {% for event in events %}
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="card shadow-lg border-0 h-100">
                            {% if event.photo %}
                                <img src="{{ asset('images/photos/' ~ event.photo) }}" class="card-img-top" alt="Photo de l'événement">
                            {% endif %}
                            <div class="card-body bg-white">
                                <h2 class="card-title text-success">{{ event.eventType }}</h2>
                                <p class="card-text fst-italic text-muted">"{{ event.description | raw }}"</p>
                                <p class="card-text"><strong>Date :</strong> {{ event.date|date('d/m/Y') }}</p>
                                <p class="card-text"><strong>Heure :</strong> De {{ event.startTime|date('H:i') }} à {{ event.endTime|date('H:i') }}</p>
                                <p class="card-text"><strong>Places disponibles :</strong> {{ event.spaceAvailable }}</p>
                            </div>
                            <div class="card-footer bg-primary text-white">
                                <small class="text-center d-block">Ne manquez pas cet événement!</small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                Aucun événement prévu pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}