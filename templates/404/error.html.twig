{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
    <div class="container my-5 p-5 error404">
        <div class="row justify-content-center p-5">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="text-center">
                    <h1 class="display-1 fw-bold colorRed">Erreur 404</h1>
                    <p class="lead colorBlue">Désolé, la page que vous recherchez n'existe pas.</p>
                </div>
                <div class="text-center mt-4 error404">
                    <button class="error404_btn btn btn-lg"><a href="{{ path('app_home') }}" class="text-white text-decoration-none">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
