{% extends 'base.html.twig' %}

{% block title %}Modifier le rendez-vous{% endblock %}

{% block meta_description %}Bienvenue sur l'espace de modification rendez-vous de FitLife360.{% endblock %}


{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="card">
                <div class="card-header colorBlue text-white">
                    <h1 class="card-title">Modifier le rendez-vous</h1>
                </div>
                <div class="card-body updateReservation returnReservationBis">
                    <a href="{{ path('app_profile') }}" class="btn btn-sm my-2 returnReservationBis_btn text-white fw-bold">Retour</a>
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.startTime) }}
                        {{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.idProfileCoach) }}
                        {{ form_widget(form.idProfileCoach, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn updateReservation_btn mt-3 text-white fw-bold">Enregistrer les modifications</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

