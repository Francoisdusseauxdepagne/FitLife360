{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block meta_description %}Bienvenue sur l'espace reservation de FitLife360.{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <a href="{{ path('app_profile') }}" class="btn btn-warning btn-sm mb-3">Retour</a>
                    <h1 class="card-title">Nouvelle réservation</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'd-flex flex-column gap-3'}}) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.date) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.startTime) }}
                            {{ form_widget(form.startTime, {'attr': {'class': 'form-control', 'placeholder': 'Heure de début'}}) }}
                            {{ form_errors(form.startTime) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.idProfileCoach) }}
                            {{ form_widget(form.idProfileCoach, {'attr': {'class': 'form-control', 'placeholder': 'Coach'}}) }}
                            {{ form_errors(form.idProfileCoach) }}
                        </div>
                        <div class="form-group btnReservation">
                           <button type="submit" class="btnReservation_btn btn btn-md text-white fw-bold">Réserver</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
