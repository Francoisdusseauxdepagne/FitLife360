{% extends 'base.html.twig' %}

{% block title %}FitLife360-Coach{% endblock %}

{% block body %}
<section class="container-fluid py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <img src="{{ asset('images/photos/' ~ profileCoach.photo) }}" class="rounded-circle img-fluid mb-4" alt="image de profil">
                        <h1 class="card-title text-success mb-4">{{ profileCoach.firstName }} {{ profileCoach.name }}</h1>
                        <ul class="list-unstyled">
                            <li><strong>Date de naissance:</strong> {{ profileCoach.dob|date('d/m/Y') }}</li>
                            <li><strong>Profil Coach créé le:</strong> {{ profileCoach.createdAt|date('d/m/Y') }}</li>
                        </ul>
                        <hr>
                        <h2 class="mb-3">À propos de moi</h2>
                        <p>{{ profileCoach.bio }}</p>
                        <ul class="list-unstyled">
                            <li><strong>Mon diplôme:</strong> {{ profileCoach.diplome }}</li>
                            <li><strong>Mon expérience:</strong> {{ profileCoach.experience }}</li>
                            <li><strong>Mon statut:</strong> {{ profileCoach.contrat }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-secondary text-white">
                        <h3 class="text-center">Plans d'entraînement</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 mb-3">
                                <a href="{{ path('app_coach_create_entrainement') }}" class="btn btn-outline-success btn-block">Créer</a>
                            </div>
                            <div class="col-lg-6 mb-3">
                                <a href="{{ path('app_coach_list_entrainements') }}" class="btn btn-outline-success btn-block">Modifier</a>
                            </div>
                        </div>
                    </div>
                </div>
				<div class="card shadow-sm border-0 my-5">
                    <div class="card-header bg-secondary text-white">
                        <h3 class="text-center">Listes des athlètes</h3>
                    </div>
					{% for profile in profiles %}
					<div class="card-body w-50">
						<ul class="list-group">
							<li class="list-group-item bg-warning"><i class="fa-solid fa-user"></i> : {{ profile.firstName }} {{ profile.name }}</li>
							<li class="list-group-item"><strong>Membre depuis le :</strong> {{ profile.createdAt|date('d/m/Y') }}
							<li class="list-group-item"><i class="fa-solid fa-bullseye"></i> : {{ profile.objectifSportif }}</li>
							<li class="list-group-item"><i class="fa-solid fa-seedling"></i> :  {{ profile.sexe }}</li>
							<li class="list-group-item"><strong>Coach attitré :</strong> {{ profile.idProfileCoach.firstName }} {{ profile.idProfileCoach.name }}</li>
						</ul>
					</div>
					{% endfor %}
                </div>
                
                {# <div class="d-flex flex-column gap-3">
                    <a href="{{ path('messenger_profileCoach_send') }}" class="btn btn-outline-warning btn-block">Envoyer un message</a>
                    <a href="{{ path('app_messengerProfileCoach') }}" class="btn btn-outline-warning btn-block">Lire les messages</a>
                </div> #}
            </div>
            <div class="col-lg-12">
                <div class="card shadow-sm border-0">
                        <div class="card-header bg-secondary text-white">
                            <h3 class="text-center">Rendez vous avec les athlètes</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                            {% if reservations|length == 1 %}
                                {% for reservation in reservations %}
                                <div class="card-body w-50">
                                <ul class="list-group">
                                    <li class="list-group-item bg-warning"><i class="fa-solid fa-user"></i> : {{ reservation.idProfile.firstName }} {{ reservation.idProfile.name }}</li>
                                    <li class="list-group-item"><strong>Date du rendez-vous :</strong> {{ reservation.date|date('d/m/Y') }}</li>
                                    <li class="list-group-item"><strong>Heure du rendez-vous :</strong> {{ reservation.startTime|date('H:i') }}</li>
                                </ul>
                            </div>
                                {% endfor %}
                            {% else %}
                            <div class="card-body w-50">
                                <p class="text-center fst-italic">Aucun rendez-vous</p>
                            </div>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
