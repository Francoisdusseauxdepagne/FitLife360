{% extends 'base.html.twig' %}

{% block title %}FitLife360-Coach{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-5 justify-content-start">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light text-white">
                    <h1 class="fs-4 mb-0 text-success">Bonjour Coach {{ app.user.firstName }} {{ app.user.name }}</h1>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row mt-5">
                            <div class="col-lg-12">
                                <h2>Informations personnelles :</h2>
                                <ul class="list-group">
                                    <li class="list-group-item">Nom : {{ profileCoach.name }}</li>
                                    <li class="list-group-item">Date de naissance : {{ profileCoach.dob|date('d/m/Y') }}</li>
                                    <li class="list-group-item">Profil Coach créé le : {{ profileCoach.createdAt|date('d/m/Y') }}</li>
                                </ul>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-lg-12">
                                <h2>Bio :</h2>
                                <ul class="list-group">
                                    <li class="list-group-item">Biographie : {{ profileCoach.bio }}</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
