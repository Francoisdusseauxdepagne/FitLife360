{% extends 'base.html.twig' %}

{% block title %}Création du profil Coach{% endblock %}

{% block meta_description %}Découvrez nos programmes d'entraînement proposés par FitLife360.{% endblock %}

{% block body %}
<div class="container mt-5 poppins">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-12 col-sm-12">
            <div class="card my-5">
                <div class="card-header bgBlue text-white">
                    <h1 class="fs-2">Bonjour Coach</h1>
                    <h2 class="fs-5 my-3">Créez votre profil</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.diplome, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.expertise, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.dob, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.experience, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.genre, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.bio, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.photoFile, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="d-grid profileEdit">
                            <button type="submit" class="profileEdit_btn btn btn-md text-white w-25">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
